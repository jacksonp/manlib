    <title>Display Varnish logs</title>
    <section xml:id="synopsis">
      <title>SYNOPSIS</title>
      <para>
        varnishlog |synopsis|
      </para>
    </section>
    <section xml:id="options">
      <title>OPTIONS</title>
      <para>
        The following options are available:
      </para>
    </section>
    <section xml:id="signals">
      <title>SIGNALS</title>
      <itemizedlist>
        <listitem>
          <para>
            SIGHUP
          </para>
          <para>
            Rotate the log file (see -w option)
          </para>
        </listitem>
        <listitem>
          <para>
            SIGUSR1
          </para>
          <para>
            Flush any outstanding transactions
          </para>
        </listitem>
      </itemizedlist>
