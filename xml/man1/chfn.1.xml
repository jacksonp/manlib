    <refpurpose>change real user name and information</refpurpose>
  </refnamediv>

  <refsynopsisdiv xml:id="synopsis">
    <cmdsynopsis sepchar=" ">
      <command>chfn</command>
      <arg choice="opt" rep="norepeat">
