    <refsynopsisdiv>
            <cmdsynopsis sepchar=" ">
                <command>ostree remote <arg choice="opt" rep="repeat">OPTIONS</arg> add <arg choice="req" rep="norepeat">NAME</arg> <arg choice="req" rep="norepeat">URL</arg> <arg choice="opt" rep="repeat">BRANCH</arg></command>
